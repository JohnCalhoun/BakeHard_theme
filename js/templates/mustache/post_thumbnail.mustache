<div id='{{id}}' class="thumbnail-card thumbnail-small" data-sticky='{{#if sticky }}1{{else}}0{{/if}}'>
    {{#if img_url }}
        <div class="thumbnail-image">
            <img src='{{img_url }}'>
        </div>
    {{/if}}
    <div class="thumbnail-title">
        <span class="thumbnail-title activate"> 
            {{{ title.rendered }}} 
        </span>
    </div>
    <div class="thumbnail-excerpt">
        {{{ excerpt.rendered }}}
        <div>
            <a class='btn post-view-button link-button' href='/posts/{{id}}' >View</a>
        </div>
    </div>
    <div class="thumbnail-content">
        <h2>{{{ title.rendered }}}</h2>
        <hr>
        {{{ content.rendered }}}
        <a class='btn post-view-button link-button' href='/posts' >Posts</a>
    </div>
</div>

