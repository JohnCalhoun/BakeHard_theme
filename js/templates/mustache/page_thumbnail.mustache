<div id='{{id}}' class="thumbnail-card thumbnail-small {{ category_string }}">
    {{#if img_url }}
        <div class="thumbnail-image">
            <img class='activator' src='{{img_url }}'>
        </div>
    {{/if}}
    <div class="thumbnail-title">
        <span class="thumbnail-title activate"> {{{ title.rendered }}} </span>
    </div>
    <div class="thumbnail-excerpt">
        <a class='btn page-view-button link-button' href='/pages/{{id}}' >View</a>
    </div>
    <div class="thumbnail-content">
        {{{ excerpt.rendered }}}
    </div>
</div>

